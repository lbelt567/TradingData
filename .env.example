# ── Cloud Storage ────────────────────────────────────────────
# Choose backend: "gcs" or "s3"
STORAGE_BACKEND=gcs

# Google Cloud Storage
GCS_BUCKET=your-trading-data-bucket
GCS_CREDENTIALS_JSON=         # paste full JSON or set GOOGLE_APPLICATION_CREDENTIALS

# AWS S3 (alternative to GCS)
S3_BUCKET=your-trading-data-bucket
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ── Supabase / PostgreSQL ───────────────────────────────────
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=eyJ...                    # anon or service_role key
SUPABASE_DB_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# ── DuckDB ──────────────────────────────────────────────────
DUCKDB_MEMORY_LIMIT=4GB
DUCKDB_THREADS=4

# ── Pipeline ────────────────────────────────────────────────
CLOUD_PREFIX=trading_data
